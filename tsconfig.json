{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./build/",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "es2015", "dom"],
    "sourceMap": true,
    "inlineSources": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "./node_modules",
    "./dist"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}